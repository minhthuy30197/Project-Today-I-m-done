    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<nav class="navbar navbar-default" role="navigation" style="opacity: 0.8;">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-check"></span> Today I'm done</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="#">List tasks</a></li>
                <li><a href="#">Performance</a></li>
                <li><a href="#">Settings</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello, Thuy<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><span class="glyphicon glyphicon-pencil"></span> Change profile</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div>
</nav>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="tasks">
            <div class="col-lg-8">
                <div class="well" style="opacity: 0.8">
                    <div id="slogan"><span class="glyphicon glyphicon-th-list"></span> Make my day</div>
                    <br>
                    <div class="thumbnail">
                        <p>Do 5 homeworks</p>
                        <div class="text-right">
                            <span class="glyphicon glyphicon-ok"></span>&emsp;
                            <span class="glyphicon glyphicon-pencil"> </span>&emsp;
                            <span class="glyphicon glyphicon-trash"> </span>
                        </div>
                    </div>
                    <form class="form-inline" action="#">
                        <input type="text" class="form-control" id="newtask" placeholder="Add a task..." required="true">
                        <button class="btn btn-default" type="submit" id="addnew">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="clocktime">
            <div class="col-lg-4 text-center ">
                <div class="btn-group">
                    <button class="btn btn-primary active" id="pomodoro" type="submit" value="Pomodoro">Pomodoro</button>
                    <button class="btn btn-primary" id="short_break" type="submit" value="Short_break">Short break</button>
                    <button class="btn btn-primary" id="long_break" type="submit" value="Long_break">Long break</button>
                </div>
                <h1 id="timer-default">25:00</h1>
                <br>
                <button class="btn btn-success radius" id="timer_start" type="submit" value="Start">Start</button>
                <button class="btn btn-danger radius" id="timer_stop" type="submit" value="Stop">Stop</button>
                <button class="btn btn-default radius" id="timer_reset" type="submit" value="Reset">Reset</button>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>